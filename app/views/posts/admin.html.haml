- content_for :head do
  = stylesheet_link_tag 'admin/application', media: 'all', 'data-turbolinks-track' => true

.all_posts
  = render 'layouts/sidebar'
  = render partial: 'all_posts', locals: { admin: true }

  #admin_fixed

  = link_to new_post_path, id: 'new_post_button' do
    %i.fa.fa-pencil.fa-fw
    new post

  = link_to logout_sessions_path, id: 'logout_button' do
    %i.fa.fa-sign-out.fa-fw
    logout
